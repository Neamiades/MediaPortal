@model MediaService.PL.Models.AccountViewModels.RegisterViewModel
@{
    ViewBag.Title = "LuxStorage";
}

<h1>@ViewBag.Title.</h1>
<h4>Добро пожаловать!</h4>
<div class="row">
    <div class="col-xs-4">
    </div>
    <div class="container">
        <div class="col-xs-4" id="authForms">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h3>Зарегистрируйтесь</h3>
                    <p class="text-center">
                        или @Html.ActionLink("Войдите в свой аккаунт", "Login")
                    </p>
                    @Html.AntiForgeryToken()

                    <div class="col-xs-8 col-xs-offset-2">
                        <div class="form-group">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", @placeholder = "Имя пользователя" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Подтвердите пароль" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-block" value="Зарегистрироваться" />
                        </div>
                    </div>
            }
        </div>
    </div>
    <div class="col-xs-4">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
